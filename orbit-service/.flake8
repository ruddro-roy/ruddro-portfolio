[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    venv,
    env,
    .venv,
    .eggs,
    *.egg,
    build,
    dist,
    migrations,
    .pytest_cache,
    htmlcov
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    W504   # line break after binary operator
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811